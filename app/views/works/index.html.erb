  <div class="space"></div>
  <%= image_tag("image.png", class:"profile_img fadein_left") %>
  <div class="space"></div>
    <div class="right_pro">
      <p class="info_right fadein_left">1994年/横浜生まれ-幼少期</p>
        <div class="space"></div>
