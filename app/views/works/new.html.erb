<h1>new work</h1>
<%= form_with model: @work, local: true do |form| %>
  <%= form.file_field :image %>
  <%= form.text_field :title, placeholder: "タイトル" %>
  <%= form.text_area :text, size: "30x10", placeholder: "内容" %>
  <%= form.text_field :url, placeholder: "URL" %>
  <%= form.text_field :url2, placeholder: "URL2" %>
  <%= form.text_field :url3, placeholder: "URL3" %>
  <%= form.submit "add work" %>
<% end %>